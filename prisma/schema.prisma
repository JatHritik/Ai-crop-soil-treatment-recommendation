generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String
  role      Role     @default(USER)
  profile   Json?
  reports   SoilReport[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model SoilReport {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Location details
  district     String
  state        String
  area         String
  season       Season
  
  // File upload
  reportFile   String
  
  // Extracted text from report
  extractedText String?
  
  // AI Analysis results
  aiAnalysis   Json?
  
  status       ReportStatus @default(PENDING)
  createdAt    DateTime     @default(now())
  analyzedAt   DateTime?
  updatedAt    DateTime     @updatedAt

  @@map("soil_reports")
}

enum Role {
  ADMIN
  USER
}

enum Season {
  KHARIF
  RABI
  ZAID
}

enum ReportStatus {
  PENDING
  ANALYZING
  COMPLETED
  FAILED
}